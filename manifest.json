{
    "manifest_version": 3,
    "name": "YouTube Playlist Search",
    "version": "1.0",
    "description": "Search for keywords in a YouTube playlist.",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["https://www.googleapis.com/"],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  